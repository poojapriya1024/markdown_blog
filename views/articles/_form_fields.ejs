<div class="form-group">
    <label for="title" class="mb-2">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control mb-2">   
</div>

<div class="form-group">
    <label for="title" class="mb-2">Description</label>
    <textarea name="description" id="description" class="form-control mb-2"><%= article.description %></textarea> 
</div>

<div class="form-group">
    <label for="title" class="mb-2">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control mb-2"><%= article.markdown %></textarea>   
</div>

<a href="/" class="btn btn-secondary mt-2">Cancel</a>
<button type="submit" class="btn btn-primary mt-2">Save</button>